#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <cmath>
#include <string>

using namespace std;

int main() {
    setlocale(LC_ALL, "ru");
    char a;
    float x = 0, y = 0;
    cout << "x = "; cin >> x;
    cout << "y = "; cin >> y;
    cout << "a = "; cin >> a;

    switch (a) {
        case '+':
            cout << x + y;
            break;
        case '-':
            cout << x - y;
            break;
        case '*':
            cout << x * y;
            break;
        case '/':
            if (y==0) {
                cout << "Дурачина, делишь на ноль" ;
            } else {
                cout << x / y;
            }
            break;
        case '^':
            if (x<0 && ((int)y % 2 == 0)) {
                cout << "Дурачина, чётная степень отрицательного" ;
            } else {
                cout << pow(x, y);
            }
            break;
        case 's':
            if (x < 0) {
                cout << "Дурачина, корень из отрицательного";
            } else {
                cout << sqrt(x);
            }
            break;
        case 'l':
            if (x <= 0) {
                cout << "Дурачина, логарифм из неположительного";
            } else {
                cout << log(x);
            }
            break;
        case 'c':
            cout << cos(x);
            break;
        case 't':
            if (cos(x) == 0) {
                cout << "Дурачина, тангенс не существует";
            } else {
                cout << tan(x);
            }
            break;
        case 'b': {
            int n = (int)x;
            if (n < 0) {
                cout << "Дурачина, двоичная только для положительных";
            } else {
                string bin = "";
                if (n == 0) bin = "0";
                while (n > 0) {
                    bin = char('0' + (n % 2)) + bin;
                    n /= 2;
                }
                cout << "В двоичной: " << bin;
            }
            break;
        }
        case 'd': {
            string bin;
            cout << "Введи двоичное число: ";
            cin >> bin;
            int dec = 0;
            for (char c : bin) {
                if (c != '0' && c != '1') {
                    cout << "Дурачина, это не двоичное число";
                    return 0;
                }
                dec = dec * 2 + (c - '0');
            }
            cout << "В десятичной: " << dec;
            break;
        }

        default:
            cout << "Дурачина, выбери нормальную операцию";
    }

    return 0;
}
